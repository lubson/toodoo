= render 'menu'
div.row-fluid
  div.task.span6
    h4 Active tasks
    ul.active-tasks
      = render @project.tasks
    div = link_to 'Add task', new_project_task_path(@project.id), remote: true, class: 'add-task btn btn-mini btn-primar' 

    h5 Completed task

  div.project-info.span5
    h3 = @project.name
    - if @project.deadline
      time
        label Deadline
        span.label class="#{deadline_format(@project.deadline)}" 
          i = @project.deadline
        p = simple_format(@project.note)
    label Created at
    date = @project.created_at
    ul.span12.project-actions
      li = link_to 'Edit', edit_project_path(@project), class:'btn btn-mini'
      li = link_to 'Postpone', edit_project_path(@project), class:'btn btn-mini'
      li = link_to 'Complete', edit_project_path(@project), class:'btn btn-mini'
      li = link_to 'Delete', @project, method: :delete, class: 'btn btn-mini btn-danger', confirm: 'Tasks in this project will be also deleted!'

